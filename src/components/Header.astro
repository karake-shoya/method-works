<header class="header">
  <div class="header-container">
    <a href="/" class="logo">
      Method Works
    </a>
    <nav class="nav">
      <ul class="nav-list">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    width: 100%;
    padding: 1.5rem 0;
    border-bottom: 1px solid #d8ddd5;
    background: rgba(247, 248, 246, 0.8);
    backdrop-filter: blur(8px);
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .header-container {
    max-width: 920px;
    margin: 0 auto;
    padding: 0 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  .nav-list {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-list a {
    text-decoration: none;
    color: #5b6459;
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-list a:hover {
    color: #1a1a1a;
  }

  @media (max-width: 640px) {
    .header {
      padding: 1rem 0;
    }
    
    .logo {
      font-size: 1.1rem;
    }

    .nav-list {
      gap: 1rem;
    }

    .nav-list a {
      font-size: 0.9rem;
    }
  }
</style>
